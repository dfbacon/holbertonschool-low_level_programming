#include <stdio.h>

/**
 * main - print sum of even fibonacci numbers
 *
 * Return: 0
 */

int main(void)
{
	long i, n, even_sum, total_sum, max;

	i = 1;
	n = 2;
	max = 4000000;
	even_sum = 0;
	current_sum = 0;
	while (i < max && j < max)
	{
		if ((j % 2) == 0)
			even_sum += j;
		current_sum = i + j;
		i = j;
		j = current_sum;
	}
	printf("%ld\n", even_sum);
	return (0);
}